{
  "name": "vidi",
  "version": "0.0.5",
  "description": "Adaptive HTML5-based video playback abstraction library",
  "main": "dist/src/index.js",
  "scripts": {
    "clean": "rimraf ./dist",
    "copy": "mkdirp ./dist/http-media-server/assets && npm run copy:assets && npm run copy:externals",
    "copy:assets": "ncp ./http-media-server/assets ./dist/http-media-server/assets",
    "copy:externals": "ncp ./externals ./dist/externals",
    "build": "npm run build:transpile && npm run copy",
    "build:transpile": "tsc",
    "build:dashjs": "babel ./node_modules/dashjs/ -d ./externals/dashjs --ignore dist/**,contrib/** --presets es2015",
    "build:docs": "typedoc --tsconfig tsconfig.json --mode file --excludeNotExported ./src --out docs",
    "bundle": "webpack --progress --config webpack.test.config.js",
    "bundle:watch": "webpack --progress -w --config webpack.test.config.js",
    "mediaserver": "node ./dist/http-media-server/standalone",
    "minify": "webpack --progress -p --config webpack.prod.config.js",
    "pretest": "npm run clean && npm run build && npm run bundle",
    "test": "node ./dist/test/boot-mediaserver-and-test",
    "prepublish": "npm run build:dashjs && typings install",
    "start": "webpack-dev-server --progress --config webpack.test.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:wix/vidi.git"
  },
  "keywords": [
    "video",
    "media",
    "html5",
    "mse",
    "adaptive",
    "hls",
    "dash",
    "mpeg"
  ],
  "author": "Avi Vahl (avi.vahl@wix.com)",
  "license": "SEE LICENSE IN LICENSE.md",
  "bugs": {
    "url": "https://github.com/wix/vidi/issues"
  },
  "homepage": "https://github.com/wix/vidi#readme",
  "devDependencies": {
    "awesome-typescript-loader": "2.1.1",
    "babel-cli": "6.11.4",
    "babel-preset-es2015": "6.13.2",
    "chai": "3.5.0",
    "karma": "1.1.2",
    "karma-chrome-launcher": "1.0.1",
    "karma-firefox-launcher": "1.0.0",
    "karma-ie-launcher": "1.0.0",
    "karma-mocha": "1.1.1",
    "karma-safari-launcher": "1.0.0",
    "mkdirp": "0.5.1",
    "mocha": "2.5.3",
    "mocha-loader": "0.7.1",
    "ncp": "2.0.0",
    "react": "15.3.0",
    "react-dom": "15.3.0",
    "rimraf": "2.5.4",
    "typedoc": "0.4.4",
    "typescript": "1.8.10",
    "typings": "1.3.2",
    "webpack": "1.13.1",
    "webpack-dev-server": "1.14.1"
  },
  "dependencies": {
    "codem-isoboxer": "0.2.3",
    "dashjs": "2.2.0",
    "hls.js": "0.6.2-2",
    "round10": "1.0.3",
    "webworkify": "1.3.0"
  }
}
